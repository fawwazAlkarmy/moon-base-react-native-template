{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@env": ["./src/lib/env.js"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "cli",
    "android",
    "ios",
    "lint-staged.config.js"
  ],
  "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts"]
}
